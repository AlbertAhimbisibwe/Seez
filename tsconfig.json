{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es2018",
    "lib": ["esnext", "dom"],
    "types": ["cypress", "node", "cypress-iframe"],
    // "module": "commonjs",
    "allowJs": true,
    "noEmit": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    // "experimentalDecorators": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "paths": {
      "@fixtures/*": ["cypress/fixtures/*"]
    }
  },
  "include": ["cypress", "**/*.ts"],
  "exclude": ["node_modules", "mongodb.d.ts"]
}
